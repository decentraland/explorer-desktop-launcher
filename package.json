{
  "name": "explorer-desktop-launcher",
  "version": "0.1.0",
  "author": "decentraland",
  "description": "Decentraland Desktop Launcher",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "decompress-zip": "^0.3.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-dl": "^3.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^1.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.2",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "react:test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run react:start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "build": "npm run react:build && tsc -p electron",
    "electron:build": "npm run build && electron-builder --publish never",
    "electron:cross-build": "npm run build && electron-builder",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "decentraland.desktop.launcher",
    "productName": "explorer-desktop-launcher",
    "extends": null,
    "artifactName": "decentraland-launcher.${ext}",
    "compression": "maximum",
    "files": [
      "build/**/*",
      "!src"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "public/logo512.png"
    },
    "linux": {
      "icon": "public/logo512.png"
    },
    "mac": {
      "icon": "public/logo512.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  }
}
