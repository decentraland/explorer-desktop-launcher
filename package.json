{
  "name": "@dcl/explorer-desktop-launcher",
  "version": "0.1.0",
  "author": "decentraland",
  "description": "Decentraland Desktop Launcher",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": false,
  "dependencies": {
    "axios": "^0.21.4",
    "decompress-zip": "^0.3.3",
    "electron-dl": "^3.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "find-free-port": "^2.0.0",
    "node": "^16.10.0",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "tsc -p electron -w && tsc -p electron && electron .",
    "start:local": "echo 'Please execute `BROWSER=none npm run start` at `explorer-website`' && concurrently \"cross-env wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "build": "tsc -p electron && electron-builder --publish never",
    "publish": "tsc -p electron && electron-builder --publish always"
  },
  "build": {
    "appId": "decentraland.desktop.launcher",
    "productName": "Decentraland",
    "extends": null,
    "artifactName": "Decentraland.${ext}",
    "compression": "maximum",
    "files": [
      "build/**/*",
      "public/**"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "public/decentraland.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "shortcutName": "Decentraland",
      "artifactName": "Install Decentraland.${ext}"
    },
    "linux": {
      "icon": "public/decentraland.png",
      "target": [
        "AppImage"
      ]
    },
    "appImage": {
      "artifactName": "Decentraland.${ext}"
    },
    "mac": {
      "icon": "public/decentraland.png",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "artifactName": "Decentraland.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "decentraland",
      "repo": "explorer-desktop-launcher",
      "private": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
