{
  "name": "@dcl/explorer-desktop-launcher",
  "version": "0.1.0",
  "author": "decentraland",
  "description": "Decentraland Desktop Launcher",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": true,
  "dependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node": "^15.6.1",
    "axios": "^0.21.4",
    "decompress-zip": "^0.3.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-dl": "^3.2.1",
    "electron-is-dev": "^2.0.0",
    "find-free-port": "^2.0.0",
    "typescript": "^4.3.2",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "echo 'Please execute `BROWSER=none npm run start` at `explorer-website`' && concurrently \"cross-env wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "build": "tsc -p electron",
    "electron:build": "npm run build && electron-builder --publish never",
    "electron:cross-build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "decentraland.desktop.launcher",
    "productName": "explorer-desktop-launcher",
    "extends": null,
    "artifactName": "decentraland-launcher.${ext}",
    "compression": "maximum",
    "files": [
      "build/**/*",
      "public"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "public/logo512.png",
      "target": [
        "portable"
      ]
    },
    "linux": {
      "icon": "public/logo512.png",
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "icon": "public/logo512.png",
      "target": [
        "dmg"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  }
}
