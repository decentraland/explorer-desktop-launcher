{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "dist",
    "rootDir": "electron",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "include": [
    "electron/**/*"
  ]
}
